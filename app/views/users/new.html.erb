<% content_for :title do %>
	Registration
<% end %>

<div id="register_wrapper" class="margin10">
	<h2>Register</h2>
	<%= simple_form_for @user,	:url => register_url do |f| %>
			<%= f.input :first_name, :label => false,
												:placeholder => 'First Name' %>
			<%= f.input :last_name, :label => false,
												:placeholder => 'Last Name' %>
			<%= f.input :email, :label => false,
												:placeholder => 'Email Address' %>
			<%= f.input :password, :label => false,
												:placeholder => 'Enter a password' %>
			<%= f.input :password_confirmation, :label => false,
												:placeholder => 'Confirm password' %>
			<%= f.submit 'Register User!', :class => "btn btn-primary" %>
	<% end %>
	<p class="text-left top_margin10 no_bottom_spacing">Already Registered?</p>
	<p class="text-left"><%= link_to "Login", login_url %> here!</p>
</div>