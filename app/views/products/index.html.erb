<div class="table-responsive">
  <table class="table table-striped table-condensed margin10">
    <caption class="text-left">Available Products:</caption>
    <thead>
      <tr>
        <th>Product</th>
        <th>Seller</th>
        <th>Date Posted</th>
        <th>Amount</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.seller.name %></td>
        <td><%= product.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= product.amount.to_digits %></td>
        <td><%= link_to "Buy", product_url(product) %></td>
      </tr>
